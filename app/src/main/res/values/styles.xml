<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorSelection">@color/colorPrimaryLight</item>
        <item name="colorHighlight">@color/colorHighlight</item>

        <item name="android:textColorPrimary">@color/colorForeground</item>
    </style>

    <style name="DarkAppTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorForeground</item>
        <item name="colorPrimaryDark">@color/colorForeground</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorForeground</item>
        <item name="android:colorBackground">@color/colorForeground</item>

        <item name="android:navigationBarColor">@color/colorForeground</item>

        <item name="colorSelection">@color/colorForegroundGray</item>
        <item name="colorHighlight">@color/colorForegroundLight</item>

        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

</resources>
